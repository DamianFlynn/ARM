{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "projectName": {
      "type": "string",
      "minLength": 2,
      "metadata": {
        "description": "Short description of the project"
      }
    }
  },
  "variables": {
    "uri" : "https://raw.githubusercontent.com/DamianFlynn/arm/master/"
  },
  "functions": [],
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "bm-namingconvention-gov",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('uri'),'/namingConvention/namingConvention.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "projectName": {
            "value": "[parameters('projectName')]"
          }
        }
      }
    },

    {
      "apiVersion": "2017-05-10",
      "name": { "value": "[replace(reference('bm-namingconvention-gov').outputs.defaultConvention.value,'{resourceType}','pip0')]" },
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('uri'),'/PublicIP/PublicIP.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[reference('bm-namingconvention-gov').outputs.defaultConvention.value]"
          }
        }
      },
      "dependsOn": [
        "bm-namingconvention-gov"
      ]
    }

  ],
  "outputs": {
    "defaultConvention": {
      "type": "string",
      "value": "[reference('bm-namingconvention-gov').outputs.defaultConvention.value]"
    },
    "storageConvention": {
      "type": "string",
      "value": "[reference('bm-namingconvention-gov').outputs.storageConvention.value]"
    }
  }
}